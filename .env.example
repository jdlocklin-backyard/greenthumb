# =============================================================================
# GreenThumb Platform - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL + PostGIS)
# -----------------------------------------------------------------------------
POSTGRES_USER=greenthumb
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=greenthumb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=changeme_generate_a_secure_random_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://api.green.lab
NODE_ENV=production

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_LOG_LEVEL=INFO
AGENT_CHECK_INTERVAL=3600  # Weather check interval in seconds (1 hour)

# External API Keys
OPENWEATHERMAP_API_KEY=your_openweathermap_key_here
# Open-Meteo is free and doesn't require API key, but backup option
WEATHER_API_PROVIDER=open-meteo  # Options: open-meteo, openweathermap

# -----------------------------------------------------------------------------
# Traefik Configuration
# -----------------------------------------------------------------------------
TRAEFIK_DOMAIN=green.lab
TRAEFIK_API_DOMAIN=api.green.lab
TRAEFIK_DASHBOARD_DOMAIN=traefik.green.lab
TRAEFIK_LOG_LEVEL=INFO
# Set to true for Let's Encrypt SSL (requires public domain)
TRAEFIK_ENABLE_HTTPS=false

# ACME/Let's Encrypt (Only if TRAEFIK_ENABLE_HTTPS=true)
ACME_EMAIL=your-email@example.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=GreenThumb
APP_VERSION=1.0.0
ENVIRONMENT=production  # Options: development, staging, production
